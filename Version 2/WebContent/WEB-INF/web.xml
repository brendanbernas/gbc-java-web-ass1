<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>GroupAss2</display-name>

  <welcome-file-list>
    <welcome-file>Login</welcome-file>
  </welcome-file-list>
  
  <!-- mapping JSPs to old servlet locations -->
  <servlet>
    <servlet-name>Login</servlet-name>
    <jsp-file>/WEB-INF/pages/main/login.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>Landing</servlet-name>
    <jsp-file>/WEB-INF/pages/main/landing.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>DepartmentLanding</servlet-name>
    <jsp-file>/WEB-INF/pages/department/department-landing.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>EmployeeLanding</servlet-name>
    <jsp-file>/WEB-INF/pages/employee/employee-landing.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>GroupLanding</servlet-name>
    <jsp-file>/WEB-INF/pages/group/group-landing.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>ReportLanding</servlet-name>
    <jsp-file>/WEB-INF/pages/report/report-landing.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>AttendanceLanding</servlet-name>
    <jsp-file>/WEB-INF/pages/attendance/attendance-landing.jsp</jsp-file>
  </servlet>
  

  <servlet-mapping>
    <servlet-name>Login</servlet-name>
	<url-pattern>/Login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Landing</servlet-name>
	<url-pattern>/Landing</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DepartmentLanding</servlet-name>
	<url-pattern>/Departments</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EmployeeLanding</servlet-name>
	<url-pattern>/Employees</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GroupLanding</servlet-name>
	<url-pattern>/Group</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ReportLanding</servlet-name>
	<url-pattern>/Reports</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AttendanceLanding</servlet-name>
	<url-pattern>/Attendance</url-pattern>
  </servlet-mapping>

</web-app>